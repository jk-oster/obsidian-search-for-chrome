{
  "name": "obsidian-browser-search",
  "private": true,
  "version": "0.1.1",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build --mode production && npm run rename-main-css",
    "preview": "vite preview",
    "start:firefox": "web-ext run --source-dir ./dist/",
    "rename-main-css": "mv $(find ./dist/ -name 'main.*.css') ./dist/main.css",
    "zip": "zip -r dist.zip dist/",
    "post-version": "git push && git push --tags && npm publish",
    "version-patch": "npm version patch --force -m \"[RELEASE] patch version %s\"",
    "version-minor": "npm version minor --force -m \"[RELEASE] minor version %s\""
  },
  "dependencies": {
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@asigloo/prettier-config": "^0.2.0",
    "@iconify/json": "^1.1.461",
    "@vitejs/plugin-vue": "^1.10.2",
    "@vue/compiler-sfc": "^3.3.4",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.30",
    "tailwindcss": "^3.3.3",
    "vite": "^2.9.16",
    "vite-plugin-chrome-extension": "^0.0.7",
    "vite-plugin-components": "^0.13.3",
    "vite-plugin-icons": "^0.6.5",
    "vite-require": "^0.2.3",
    "webextension-polyfill": "^0.10.0"
  }
}
